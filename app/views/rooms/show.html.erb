<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @room %>

    <%= link_to 'Edit this room', edit_room_path(@room), class: "mt-2 rounded-lg py-3 px-5 bg-gray-200 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this room', room_path(@room), method: :delete, class: "text-sm mt-2 rounded-lg py-3 px-5 bg-gray-200 font-medium" %>
    </div>
    <%= link_to 'Back to rooms', rooms_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-200 inline-block font-medium" %>

<div class='messages'>
    <%= render @room.messages %>
    <p> <%= link_to 'New message', new_room_message_path(@room), class: "ml-2 rounded-lg py-3 px-5 bg-gray-200 inline-block font-medium" %>
    </p>  
</div>


  </div>
</div>
