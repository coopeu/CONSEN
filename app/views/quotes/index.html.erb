<%# app/views/quotes/index.html.erb %>

<main class="container">
  
  <%= turbo_frame_tag "first_turbo_frame" do %>
  <div class="header relative w-full flex flex-wrap justify-between border-b py-2 my-2">
    <h1 class='text-4xl font-bold mb-6 text-teal-600'>Quotes</h1>
    <span><%= link_to "New quote", 
                      new_quote_path, 
                      data: { turbo_frame: "_top" }, 
                      data: { turbo_frame: dom_id(Quote.new) },
                      #data: { turbo_frame: "second_frame" },
                      class: "btn-teal p-4" %>
    </span>
  </div>
    <% end %>

  <div class='mb-2 my-2 border-b-2 border-teal-200'>
   <%= turbo_frame_tag Quote.new %>
  <br/>   
  </div>   
  <%#= turbo_frame_tag "second_frame" do %>
  <%= turbo_frame_tag "quotes" do %>
    <%= render @quotes %>
  <% end %>  

</main>
